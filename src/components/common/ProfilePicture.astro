---
interface Props {
  src: string;
  alt: string;
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const { src, alt, size = 'md', class: className = '' } = Astro.props;

const sizeStyles = {
  sm: 'w-12 h-12',
  md: 'w-16 h-16',
  lg: 'w-24 h-24'
};

const classes = `rounded-full object-cover border-2 border-gray-200 ${sizeStyles[size]} ${className}`;
---

<img src={src} alt={alt} class={classes} />
