---
interface Props {
  value: string;
  label: string;
  class?: string;
}

const { value, label, class: className = '' } = Astro.props;
---

<div class={`text-center ${className}`}>
  <div class="text-4xl md:text-5xl font-bold text-secondary mb-2">
    {value}
  </div>
  <div class="text-lg md:text-xl text-secondary">
    {label}
  </div>
</div>
