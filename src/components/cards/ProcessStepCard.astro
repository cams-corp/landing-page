---
interface Props {
  stepNumber: number;
  title: string;
  description: string;
  class?: string;
}

const { stepNumber, title, description, class: className = '' } = Astro.props;
---

<div class={`bg-white rounded-lg shadow-md p-8 hover:shadow-xl transition-shadow duration-300 ${className}`}>
  <div class="flex items-center justify-center w-16 h-16 bg-primary text-white rounded-full text-2xl font-bold mb-4 mx-auto">
    {stepNumber}
  </div>

  <h3 class="font-bold text-2xl text-gray-900 mb-4 text-center">
    {title}
  </h3>

  <p class="text-gray-700 leading-relaxed text-center">
    {description}
  </p>
</div>
