---
import { Image } from "astro:assets";

interface Props {
  image: string;
  alt: string;
  class?: string;
}

const { image, alt, class: className = "" } = Astro.props;
---

<div
  class={`bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 ${className}`}
>
  <Image
    src={image}
    alt={alt}
    class="w-full h-auto object-cover"
    width={280}
    height={300}
    loading="lazy"
  />
</div>
